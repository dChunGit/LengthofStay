<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/event_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Category:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_title" />

    <TextView
        android:id="@+id/event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Location:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_category" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_location"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_corners_fill_color"
        app:layout_constraintTop_toTopOf="@id/event_time"
        app:layout_constraintEnd_toEndOf="@id/event_time"
        app:layout_constraintBottom_toBottomOf="@id/event_time"
        app:layout_constraintStart_toStartOf="@id/event_time"/>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="16dp"
        android:text="Time:"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_description"/>

    <View
        android:id="@+id/event_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/event_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/event_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="24dp"
        android:text="Reviews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_divider"/>

    <Button
        android:id="@+id/event_filter_report"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Filter"
        android:padding="8dp"
        android:includeFontPadding="false"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toStartOf="@id/event_add_report"
        app:layout_constraintTop_toTopOf="@id/event_reviews"
        app:layout_constraintBottom_toBottomOf="@id/event_reviews"/>

    <EditText
        android:id="@+id/event_report_filter"
        android:layout_width="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="Search..."
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_reviews"
        android:visibility="gone"/>

    <Button
        android:id="@+id/event_add_report"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+ Report"
        android:padding="8dp"
        android:includeFontPadding="false"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_reviews"
        app:layout_constraintBottom_toBottomOf="@id/event_reviews"/>

    <TextView
        android:id="@+id/event_report_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No reports found, why don't you add one!"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@id/event_reviews_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/event_review_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:constraint_referenced_ids="event_reviews,event_report_filter"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_reviews_rv"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/event_review_barrier"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>